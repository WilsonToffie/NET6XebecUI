@page "/forgotpassword"
@inject NavigationManager navmanager
@inject HttpClient HttpClient
@using System.Linq;
@using XebecPortal.UI.Shared.Home.Models
@inject UserState state
@inject IJSRuntime JSRuntime

<style>
    
    .overlay-login {
        height: 90vh;
        width: 100%;
    }

    .login-page {
        height: 90vh;
