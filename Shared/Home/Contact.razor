@page "/contact"
@inject IJSRuntime JSRuntime
<style>
    .overlay-contact {
        height: 90vh;
        width: 100%;
        animation: ease-in 0.15s;
        overflow-x:hidden;
    }

    .contact-top {
        height: 85vh;
        width: 100%;
    }


    .contact-bottom {
        height: 5vh;
        width: 100%;
    }


    .overlay-contact input[type=text], select {
        color: black;
        padding: 0.8em 1em 0.8em 1em;
        font-family: opensans-condensed-light;
        font-weight: 800;
        font-size: 1em;
        width: 70%;
        border: 0.15em solid #00bcae;
        border-radius: 1em;
        background-color: transparent;
        height: 7vh;
        margin-bottom: 1vh;
        margin-bottom:1vh;
        /*Newly added, if need to change, then change the width to 100%*/
        display: block;
        margin-left: 15%;
        margin-right: 15%;
    }

    .overlay-contact::placeholder {
        color: black;
        font-family: opensans-condensed-light;
        font-size: 1em;
        font-weight: 900;
    }

    .subButton {
        width: 40%;
        background-color: #00bcae;
        color: white;
        margin-left: 30%;
        margin-right: 30%;
        /*Maybe keep the bottom margin?*/
        margin-bottom: 2%;
        text-align: center;
        font-size: 1.2em;
        border: none;
        border-radius: 16px;
        cursor: pointer;
        height: 5vh;
    }

        .subButton:hover {
            background-color: #d35bc9;
        }

        .subButton:disabled{
            background-color: grey;
        }

    .emailDisclaimer {
        position: relative;
        left: 50%;
    }

    .privacyPolicy {
        position: relative;
        left: 55%;
    }

    .rightsReserved {
        position: relative;
        left: 55%;
    }

    .logo {
        position: relative;
        bottom: 10%;
        background-image: url(/Img/logo.svg);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        width: 10vh;
        height: 5vh;
    }

    .firstDiv {
        text-align: center;
        font-family: opensans-condensed-bold;
        font-weight: 800;
        font-size: 14px;
        padding-top: 5vh;
    }

    .secondDiv {
        font-family: opensans-condensed-bold;
        font-weight: 800;
        /*Newly added stuffs*/
        border: none;
        border-radius: 2em;
        background: white;
        padding: 5px 5px;
        margin-top: 5vh;
    }

    .thirdDiv {
        text-align: center;
        font-family: opensans-condensed-bold;
        font-weight: 800;
        padding-top: 5vh;
    }

    .contact-Bottom-Style {
        font-family: opensans-condensed-bold;
        font-weight: 800;
        text-align: center;
    }

    .applicant-profile {
        height: inherit;
        max-width: 5em;
        margin: auto;
        background-image: url(/Img/upload.svg);
        background-size: cover;
        background-position: center;
        width: 20px;
    }

    .linkStyle {
        color: #00BCAE;
    }

        .linkStyle:hover {
            color: #d35bc9;
            cursor: pointer;
            text-decoration: none;
        }

    p {
        font-size: 1.2em;
        font-family: opensans-condensed-light;
        font-weight: 800;
    }

    .contactIcons {
        font-size: 2em;
        color: #00bcae;
        margin-left: 10px;
        margin-right: 10px;
    }

        .contactIcons:hover {
            font-size: 2em;
            color: #d35bc9;
            margin-left: 10px;
            margin-right: 10px;
        }

    .contactHeading {
        font-size: 2em;
        font-family: opensans-condensed-bold;
        font-weight: 500;
        color: #000000;
        text-transform: uppercase;
        text-align: center;
        margin-top: 60px;
        padding-bottom: 10px;
    }

    .contact-form-heading {
        font-size: 2em;
        font-family: opensans-condensed-bold;
        font-weight: 500;
        color: #000000;
        text-transform: uppercase;
        text-align: center;
        padding-bottom: 25px;
    }

    .contact-drop-style {
        font-family: opensans-condensed-light;
        font-weight: 800;
    }
    ::placeholder{
        color:#000000; 
        font-weight:600;
    }
</style>

<div class="overlay-contact">
    <div class="row contact-top">
        <div class="col-4">
            <div class="firstDiv">
                <h1 class="contactHeading">Head Office</h1>
                <p>
                    22 Park Lane<br>
                    Century City<br>
                    Cape Town<br>
                    7441<br>
                    South Africa<br>
                </p>
                <h1 class="contactHeading">Contact Details</h1>
                <p>contactus@1nebula.com </p>
                <p>+27 21 555 3227 </p>

                <a href="https://www.linkedin.com/company/nebula/"><i class="fab fa-linkedin contactIcons"></i></a>
                <a href="https://www.instagram.com/1nebula_global/"><i class="fab fa-instagram contactIcons"></i></a>
                <a href="https://www.facebook.com/1Nebula/"><i class="fab fa-facebook contactIcons"></i></a>
                <br>
            </div>
        </div>



        <div class="col-4">
            <div class="secondDiv">
                <h1 class="contact-form-heading">Drop us a message.</h1>

                <EditForm Model="@Temp" OnValidSubmit="@Add" >
                    <DataAnnotationsValidator />
                    
                    
                    <ValidationMessage For="@(() => Temp.career)" style="text-align:center;" />
                        <InputSelect @bind-Value="Temp.career"  >
                        
                        <option style="color:#000000; font-weight:600" value="" disabled selected hidden>Select Department</option>
                        <option   style="color:#000000; font-weight:600" value="sales">Nebula Sales</option>
                        <option  style="color:#000000; font-weight:600" value="demoRequest">I'd like a demo</option>
                        <option  style="color:#000000; font-weight:600" value="careers">Nebula Careers</option>
                        <option  style="color:#000000; font-weight:600" value="support">Nebula Support</option>
                        <option  style="color:#000000; font-weight:600" value="other">Other</option>
                       
                    </InputSelect>

                   

                  
                    <ValidationMessage For="@(() => Temp.email)" style="text-align:center;" />
                    <InputText @bind-Value="Temp.email"  style="color:#000000; font-weight:600" placeholder="Email" type="text" name="email" id="userEmail" />
                  
                    
                   

                    <ValidationMessage For="@(() => Temp.name)" style="text-align:center;"  />
                    <InputText @bind-Value="Temp.name"   style="color:#000000; font-weight:600"  placeholder="First Name" type="text" name="firstName" id="fName" />

                  
                   

                  
                    <ValidationMessage For="@(() => Temp.surname)" style="text-align:center;" />
                    <InputText @bind-Value="Temp.surname"    style="color:#000000; font-weight:600"  placeholder="Last Name" type="text" name="lastName" id="lName" />
                   
                    

                   
                    <ValidationMessage For="@(() => Temp.demo)" style="text-align:center;"  />
                    <InputSelect @bind-Value="Temp.demo"   style="color:#000000; font-weight:600" name="querySelect" >
                        <option  style="color:#000000; font-weight:600" value="" disabled selected hidden>Select Query</option>
                        <option  style="color:#000000; font-weight:600" value="sales">OneView Demo</option>
                        <option  style="color:#000000; font-weight:600" value="demoRequest">Stactize Demo</option>
                        <option  style="color:#000000; font-weight:600" value="careers">Other</option>
                    </InputSelect>

                   
                    
                   
                    <ValidationMessage For="@(() => Temp.query)" style="text-align:center;"  />
                       
                    <InputTextArea @bind-Value="Temp.query"    name="userMessage" id="userMessage"  style="width: 70%; height:100px; margin-left: 15%; margin-right: 15%; padding: 1em 1em 1em 1em; display: inline-block; border: 0.2em solid #00bcae; border-radius: 1.5em; box-sizing: border-box; background-color: transparent; font-family: opensans-condensed-light; font-weight: 800; font-size: 1em; resize:none;  "></InputTextArea>
                   
                    
                       
                   


                    <div style="text-align:center">
                        <input class="subButton" type="submit" value="Submit" disabled="@SubmitIsPressed" >
                    </div>
                </EditForm>
            </div>
        </div>
        <div class="col-4">
            <div class="thirdDiv">
                <h1 class="contactHeading">Applicant Services</h1>
                <p>
                    Application Profile
                    <br>
                    Jobs Portal
                    <br>
                    My Jobs
                    <br>
                    <br>
                    <br>
                </p>
                <h1 class="contactHeading">HR Services</h1>
                <p>
                    Applicant Viewer
                    <br>
                    Job Portal
                    <br>
                    Data Analytics
                </p>
            </div>
        </div>
    </div>

    <div class="row contact-bottom">

        <div class="col-2">
            <div class="emailDisclaimer contact-Bottom-Style">
                <a href="https://www.1nebula.com/email-disclaimer?hsLang=en" class="linkStyle">Email Disclaimer</a>
            </div>
        </div>

        <div class="col-2"></div>

        <div class="col-2">
            <div class="privacyPolicy contact-Bottom-Style">
                <a href="https://www.1nebula.com/privacy-policy?hsLang=en" class="linkStyle">Privacy Policy</a>
            </div>
        </div>

        <div class="col-2"></div>

        <div class="col-2">
            <div class="rightsReserved contact-Bottom-Style">
                All Rights Reserved
            </div>
        </div>

        <div class="col-1"></div>

        <div class="col-1">
            <div class="logo"></div>
        </div>
    </div>
</div>


@code{
    public List<ContactUsModel> contactUs = new();
    public ContactUsModel Temp = new();
    bool SubmitIsPressed = false;


    public async void Add()
    {
        contactUs.Add(new()
            {
                career = Temp.career,
                email = Temp.email,
                name = Temp.name,
                surname = Temp.surname,
                demo = Temp.demo,
                query = Temp.query,
            });

        foreach(var temp in contactUs)
        {
            Console.WriteLine($"{temp.career}, {temp.email}, {temp.name}, {temp.surname}, {temp.demo}, {temp.query}");
        }
        Temp = new();
        await JSRuntime.InvokeAsync<object>("alert", $"Thank you for contacting us. A response will be sent to you soon.");
        
    }
   

}